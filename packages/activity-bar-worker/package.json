{
  "name": "@lvce-editor/activity-bar-worker",
  "version": "0.0.0-dev",
  "description": "Explorer Worker",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/activity-bar-worker.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/activityBarWorkerMain.ts",
  "scripts": {
    "build:watch": "cd ../../ && npm run build:watch",
    "dev": "cd ../../ && npm run dev",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/**"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60
      }
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@lvce-editor/constants": "^2.9.0",
    "@lvce-editor/i18n": "^2.1.0",
    "@lvce-editor/rpc": "^5.4.0",
    "@lvce-editor/rpc-registry": "^7.5.0",
    "@lvce-editor/viewlet-registry": "^2.0.0",
    "@lvce-editor/virtual-dom-worker": "^6.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  }
}
